{
    "@context": "http://www.schema.org",
    "@type": "Person",
    "@id": "{{ .Site.BaseURL }}",
    "name": "{{ .Site.Params.author }}",
    "url": "{{ .Site.BaseURL }}",
    "description": "{{ .Site.Params.Description }}",

    {{ with .Site.Params.Feat.structuredDataGitHubUser }}
    {{ with (getJSON "https://api.github.com/users/" .) }}
        "image": "{{ .avatar_url }}",
        {{ if ne .login .Site.Params.author }}
        "alternateName": "{{ .login }}",
        {{ end }}
        {{ with .email }}
        "email": "{{ . }}",
        {{ end }}
        {{ with .location }}
        "address": "{{ . }}",
        {{ end }}
        {{ $count := 0 }}
        {{ $orgs := (getJSON .organizations_url) }}
        {{ with $orgs }}
        "affiliation": [
        {{ range $i, $org := . -}}
            {{ with (getJSON .url) -}}
            {
                "@type": "Organization",
                "name": "{{ .name }}",
                "sameAs": [
                    "{{ .blog }}",
                    "{{ .html_url }}"
                ]
            }{{ if lt $i (sub (len $orgs) 1) }},{{ end }}
            {{- end }}
        {{- end }}
        ],
        {{ end }}
    {{ end }}
    {{ end }}

    "sameAs": [
        {{ range $i, $url := .Site.Params.Social -}}
            "{{ .url }}"{{ if lt $i (sub (len $.Site.Params.Social) 1) }},{{ end }}
        {{- end }}
    ]
}
